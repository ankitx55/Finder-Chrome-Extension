{
  "manifest_version": 2,
  "name": "Word Extractor",
  "version": "1.0",
  "description": "Extract specific words from webpages",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/image.png",
      "48": "images/image.png",
      "128": "images/image.png"
    },
    "default_title": "Word Extractor",
    "js": ["popup.js"]
  },
  "icons": {
    "16": "images/image.png",
    "48": "images/image.png",
    "128": "images/image.png"
  }
}
